{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "downlevelIteration": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src",
    "paths": {
      "@assets/*": [
        "assets/*"
      ],
      "@components/*": [
        "components/*"
      ],
      "@containers/*": [
        "containers/*"
      ],
      "@contexts/*": [
        "contexts/*"
      ],
      "@data/*": [
        "data/*"
      ],
      "@hooks/*": [
        "hooks/*"
      ],
      "@hooks": [
        "hooks"
      ],
      "@layout/*": [
        "layouts/*"
      ],
      "@lib/*": [
        "lib/*"
      ],
      "@ui/*": [
        "components/ui/*"
      ],
      "@utils/*": [
        "utils/*"
      ],
      "@widgets/*": [
        "components/widgets/*"
      ],
      "@fonts/*": [
        "public/fonts/*"
      ],
      "@vercel/analytics/*": [
        "../node_modules/@vercel/analytics/*"
      ],
      "@/*": [
        "*"
      ]
    },
    "types": [
      "google.maps",
      "@types/node"
    ],
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "__tests__/**/*.test.*",
    "__tests__/**/*.tests.*",
    "jest.config.ts",
    "jest.setup.ts",
    "next-env.d.ts",
    "next-sitemap.config.js",
    "next.config.js",
    "playwright.config.ts",
    "postcss.config.js",
    "src/**/*.ts",
    "src/**/*.tsx",
    "tailwind.config.js",
    "tests/**/*.spec.*",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
